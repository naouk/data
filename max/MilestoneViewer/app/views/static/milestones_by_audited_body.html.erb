<div style="float: right; margin: 20px 20px 0 0;">
  <%= select_tag 'audited_body', options_from_collection_for_select(@audited_bodies, 'id', 'name'), 
      style: 'width: 400px; font-size: 18px; padding: 5px 0;' %>
</div>

<div id="time_line"></div>
<script>
  $(document).ready(function() {
    createStoryJS({
      type: 'timeline',
      width: '100%',
      height: '800',
      source: "/milestones/milestones_by_audited_body.json?audited_body_id=<%= @audited_body.id %>", //get the events.json format from https://github.com/VeriteCo/TimelineJS#file-formats
      embed_id: 'time_line'
    });
  });
</script>